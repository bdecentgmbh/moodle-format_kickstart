{{!
    @template format_kickstart/course_template_list

    Template for the course template list displayed to teachers.

    Classes required for JS:
    -

    Data attributes required for JS:
    -

    Context variables required for this template:
    * statusicon
    * statustext
    * actions
        - url
        - data
        - text
        - title

    Example context (json):
    {
        "statusicon": "accepted",
        "statustext": "Accepted",
        "actions": {
            "url": "/admin/tool/policy/accept.php?param=value",
            "data": "acceptmodal",
            "text": "Withdraw",
            "title": "Withdraw acceptance of Site policy"
        }
    }
}}

{{#templates}}
    {{#groups}}
        <div class="card-deck mb-2">
            {{#templates}}
                {{^isplaceholder}}
                    <div class="card">

                        <div class="card-body">
                            <h5 class="card-title">{{title}}</h5>
                            <p class="card-text">{{{description_formatted}}}</p>
                            <small class="text-muted">{{hashtags}}</small>
                        </div>
                        <div class="card-footer">
                            <a href="#" class="btn btn-primary">{{#str}}usetemplate, format_kickstart{{/str}}</a>
                        </div>
                    </div>
                {{/isplaceholder}}
                {{#isplaceholder}}
                    <div class="card bg-secondary">

                        <div class="card-body d-flex">
                            <div class="align-self-center text-center" style="width: 100%">
                                <p class="card-text">{{title}}</p>
                                <a href="{{{link}}}" class="btn btn-dark">{{#str}}learnmore, format_kickstart{{/str}}</a>
                            </div>
                        </div>
                    </div>
                {{/isplaceholder}}
            {{/templates}}
        </div>
    {{/groups}}
{{/templates}}